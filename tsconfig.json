{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "@carnelian-diagram/core",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "paths": {
      "@carnelian-diagram/core": ["./packages/core/src"],
      "@carnelian-diagram/core/*": ["./packages/core/src/*"],
      "@carnelian-diagram/interaction": ["./packages/interaction/src"],
      "@carnelian-diagram/interaction/*": ["./packages/interaction/src/*"],
      "@carnelian-diagram/shapes": ["./packages/shapes/src"],
      "@carnelian-diagram/shapes/*": ["./packages/shapes/src/*"]
    }
  }
}
